<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ThespiVision.Views.PostShowPage">
    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="Show Title"/>
            <Entry Placeholder="Theater Company"/>
            <Entry Placeholder="Location"/>
            <Frame BorderColor="LightGray" HasShadow="False" Padding="0">
                <Editor Placeholder="Enter a short description of the show" HeightRequest="100"/>
            </Frame>
            <Button Text="Post Show"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>