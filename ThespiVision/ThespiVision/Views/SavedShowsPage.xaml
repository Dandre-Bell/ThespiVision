<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ThespiVision.Views.SavedShowsPage">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="EmptySaveListText" Text="Save Some Shows!" VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" />
            <ListView x:Name="SavedShowListView">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand">
                                <StackLayout>
                                    <Label Text="{Binding title}"/>
                                    <Label Text="{Binding showDate}"/>
                                </StackLayout>
                                <ImageButton Source="ThespiVision\ThespiVision\Assets\TrashIcon.png" BackgroundColor="Red" WidthRequest="50" Margin="210,0,0,0"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Button Text="Add Test" Clicked="testAdd"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>