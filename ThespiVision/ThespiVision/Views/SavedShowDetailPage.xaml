<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ThespiVision.Views.SavedShowDetailPage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="Center">
            <Label x:Name="Title" FontSize="40" TextColor="Black"/>
            <Label x:Name="Company"/>
            <StackLayout Orientation="Horizontal">
                <Label x:Name="OpenDate"/>
                <Label x:Name="CloseDate"/>
            </StackLayout>
            <Label x:Name="Description"/>
            <ImageButton x:Name="DelBtn" Source="TrashIcon.png" WidthRequest="50" Margin="210,0,0,0" Scale=".8" BackgroundColor="Transparent" Clicked="DeleteEntry" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>