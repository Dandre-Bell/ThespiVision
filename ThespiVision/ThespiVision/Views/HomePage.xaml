<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:maps="clr-namespace:Xamarin.Forms.Maps;assembly=Xamarin.Forms.Maps"
             x:Class="ThespiVision.Views.HomePage">
    <ContentPage.Content>
        <StackLayout>
            <maps:Map x:Name="showMap" MapType="Street" IsShowingUser="True" />
            <StackLayout HorizontalOptions="Center">
                <Label x:Name="RadiusDisplay" Text="Shows within 20 miles" FontSize="30"/>
                <Slider x:Name="RadiusSlider" Minimum="0" Maximum="100" ThumbColor="Blue" MinimumTrackColor="Blue" MaximumTrackColor="Gray" Margin="0,0,0,30" ValueChanged="Slider_ValueChanged"/>
            </StackLayout>
        </StackLayout>
        
    </ContentPage.Content>
</ContentPage>